{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    // some comment thing 2,3,4,5,6,7,8
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "install",
            "problemMatcher": []
        },
        {
            "type": "npm",
            "script": "tldr",
            "problemMatcher": []
        },
        {
            "type": "shell",
            "command": "x-www-browser https://tldr.ostera.io/${input:nixCMD}",
            "label": "tldr",
            "problemMatcher": []
        },
        {
            "type": "shell",
            "command": "echo Test",
            "label": "Some New Task",
            "problemMatcher": []
        },
        {
            "type": "shell",
            "command": "echo Test2",
            "label": "Some New Task 3",
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "nixCMD",
            "description": "Enter a *nix command for more info",
            "type": "promptString",
            "default": "grep"
        }
    ]
}
